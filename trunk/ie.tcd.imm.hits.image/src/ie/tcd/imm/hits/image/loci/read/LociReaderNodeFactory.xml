<knimeNode icon="./default.png" type="Source">
    <name>LOCI Plate Reader</name>
    
    <shortDescription>
        This node reads image information readable by LOCI Bio-Format.
    </shortDescription>
    
    <fullDescription>
        <intro>
        Reads the images of a folder to access them later with LOCI Plate Viewer.
        <br/>
        Details can be found <a href="../../help/Loci_Plate_Viewer.xhtml">here</a>.
        </intro>
        
        
        <option name="folder">The folder of images</option>
        <option name="extensions">Extensions to select the image files</option>
        <!--option name="short name of second option (like in the dialog)">description of second option</option-->
    </fullDescription>
    
    <ports>
        <!--inPort index="0" name="In-Port name">Description of first input port...</inPort-->
        <!-- possibly more input ports here-->
        <outPort index="0" name="mapping to readers">maps the images to LOCI readers</outPort>
        <outPort index="1" name="readers">LOCI readers</outPort>
        <outPort index="2" name="metadata">metadata from readers</outPort>
        <!-- possibly more output ports here-->
    </ports>    
